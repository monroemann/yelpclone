<h1>User Dashboard</h1>

<div class="booyah-box container-fluid">
  <div class="col-xs-12 col-md-4">
      <%= image_tag 'user_small_size.png' %>
  </div>

  <div class="col-xs-12 col-md-8">
      <h1><%= @user.email %></h1>
      <h3>Member Since: <%= @user.created_at.strftime("%B %d, %Y") %>  </h3>
      <h4><%= @user.comments.count %> total comments</h4>
      <h4><%= @user.comments.where(rating: '5_stars').count %> five-star comments</h4>
  </div>
  <div class="clear"></div>
</div>